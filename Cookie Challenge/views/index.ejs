    </div>
</body>
<script>
    function getCookie(cname) {
        var name = cname + "=";
        var ca = document.cookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
                return c.substring(name.length, c.length);
            }
        }
        return "";
    }

    function applyColors() {

        document.getElementById('thebody').style.backgroundColor = getCookie('backgroundcolor')

        var divs = document.getElementsByClassName('thediv')
        
        for(var i=0; i<divs.length; i++){
            divs[i].style.backgroundColor = getCookie('postcolor')
            divs[i].style.color = getCookie('fontcolor')
        }
    }

</script>

</html>
